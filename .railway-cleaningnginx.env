# Railway Build Environment
# Force clean, fresh builds without cache issues

# CRITICAL: Always rebuild from source, never use stale snapshots
RAILWAY_SKIP_BUILD_CACHE=true
RAILWAY_FORCE_REBUILD=true
NODE_ENV=production

# Node.js strict version enforcement
NODE_VERSION=20
NPM_VERSION=10

# Build configuration
NODE_OPTIONS="--max-old-space-size=2048"
NPM_CACHE_MAX_AGE=1h

# Ensure clean npm installs (no lockfile cached issues)
NPM_CLEAN_INSTALL=true

# Next.js specific
NEXT_PUBLIC_APP_VERSION=0.1.3-draad176a
NEXT_BUILD_OPTIMIZATION=true
